<html>

<head>
  <title>Flapper News</title>

  <link rel="stylesheet" href="styles/lib.css">

  <link rel="stylesheet" href="styles/app.css">

</head>

<body ng-app="flapperNews" ng-controller="HomeCtrl" class="container-fluid">
  <nav class="navbar navbar-default navbar-fixed-top navbar-custom" ng-controller="NavCtrl">
    <ul class="nav navbar-nav">
      <li ng-show="isLoggedIn()"><a class="navbar-item">{{ currentUser() }}</a></li>
      <li ng-show="isLoggedIn()"><a class="navbar-item" href="" ng-click="logOut()">Log Out</a></li>
      <li ng-hide="isLoggedIn()"><a class="navbar-item" href="/#/login">Log In</a></li>
      <li ng-hide="isLoggedIn()"><a class="navbar-item" href="/#/register">Register</a></li>
    </ul>
  </nav>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div ng-controller="SliderController">
        <h1 class="page-header">Pictures</h1>
        <slider images="images" />
      </div>
      <div ui-view></div>
    </div>
  </div>

  <script src="js/lib.js"></script>

  <script src="js/app.js"></script>
</body>

</html>
